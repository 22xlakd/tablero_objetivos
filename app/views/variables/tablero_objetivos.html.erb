<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li>
        <a href="/">
          <em class="fa fa-home"></em>
        </a>
      </li>
      <li class="active">Tablero</li>
    </ol>
  </div><!--/.row-->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Tablero de Objetivos del mes de <%= l(Time.zone.today, format: :only_month).capitalize %></h1>
    </div>
  </div><!--/.row-->

  <!--
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">Estado actual de los Objetivos</div>
        <div class="panel-body">
          
        </div>
      </div>
    </div>
  </div>
  -->

  <div id="notice" class="alert bg-info <% if notice.nil? %>hidden<% end %>" role="alert">
    <em class="fa fa-lg fa-warning">&nbsp;</em> <%= notice %> <a href="#" class="pull-right"><em class="fa fa-lg fa-close"></em></a>
  </div>

  <% @tablero.in_groups_of(4, false) do |group| %>
    <div class="row">
      <% group.each do |c_variable| %>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
          <div class="panel panel-default">
            <div class="panel-body easypiechart-panel">
              <h4><%= c_variable.nombre %></h4>
              <div id="gauge" class="200x160px"></div>

              <script>
                var g = new JustGage({
                  id: "gauge",
                  value: 6,
                  min: 0,
                  max: 10,
                  levelColors: ["#ff0000", "#f9c802", "#a9d70b"],
                  pointer: true,
                });
              </script>
              <!--<div class="easypiechart" id="easypiechart-blue" data-percent="92" ><span class="percent">92%</span></div>-->
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>



  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
      <div class="panel panel-default">
        <div class="panel-body easypiechart-panel">
          <h4>Comments</h4>
          <div class="easypiechart" id="easypiechart-orange" data-percent="65" ><span class="percent">65%</span></div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
      <div class="panel panel-default">
        <div class="panel-body easypiechart-panel">
          <h4>New Users</h4>
          <div class="easypiechart" id="easypiechart-teal" data-percent="56" ><span class="percent">56%</span></div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
      <div class="panel panel-default">
        <div class="panel-body easypiechart-panel">
          <h4>Visitors</h4>
          <div class="easypiechart" id="easypiechart-red" data-percent="27" ><span class="percent">27%</span></div>
        </div>
      </div>
    </div>
  </div><!--/.row-->
</div>


