<!-- Modal -->
<div class="modal fade" id="addObjectiveToUser" tabindex="-1" role="dialog" aria-labelledby="newObjectiveModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title inline-title" id="exampleModalLongTitle">Agregar objetivo para usuario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= display_user_selector(@variable, :exclude) %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t(:close) %></button>
        <button type="button" class="btn btn-primary" onclick="add_objective();"><%= t(:create) %></button>
      </div>
    </div>
  </div>
</div>
