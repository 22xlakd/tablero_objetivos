<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li>
        <a href="/">
          <em class="fa fa-home"></em>
        </a>
      </li>
      <li class="active">Variables</li>
    </ol>
  </div><!--/.row-->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Variables Objetivo</h1>
    </div>
  </div><!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading"><%= t(:title_variable_index) %></div>
        <div class="panel-body">
          <div id="notice" class="alert bg-info <% if notice.nil? %>hidden<% end %>" role="alert">
            <em class="fa fa-lg fa-warning">&nbsp;</em> <%= notice %> <a href="#" class="pull-right"><em class="fa fa-lg fa-close"></em></a>
          </div>

          <table class="table table-striped">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Puntaje</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @variables.each do |variable| %>
                <tr>
                  <td align="center"><%= variable.nombre %></td>
                  <td align="center"><%= variable.tipo.capitalize %></td>
                  <td align="center"><%= variable.puntaje %></td>
                  <td><%= link_to t(:edit), edit_variable_path(variable) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>

<script>
  jQuery(document).ready(function(){
    activeMenuItem('variables');
  });
</script>
