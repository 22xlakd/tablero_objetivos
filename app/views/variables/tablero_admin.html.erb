<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li>
        <a href="/">
          <em class="fa fa-home"></em>
        </a>
      </li>
      <li class="active">Tablero</li>
    </ol>
  </div><!--/.row-->
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">Estado de Objetivos del mes de <%= l(Time.zone.today, format: :only_month).capitalize %></h3>
    </div>
  </div><!--/.row-->

  <% if !notice.nil? %>
    <div id="notice" class="alert bg-success" role="alert">
      <em class="fa fa-lg fa-warning">&nbsp;</em> <%= notice %> <a href="#" class="pull-right"><em class="fa fa-lg fa-close"></em></a>
    </div>
    <script>
      setTimeout(function(){ hideFlashMessage("#notice"); }, 1500);
    </script>
  <% end %>
<%
data = {
  labels: ["January", "February", "March", "April", "May", "June", "July"],
  datasets: [
    {
        label: "My First dataset",
        backgroundColor: "rgba(220,220,220,0.2)",
        borderColor: "rgba(220,220,220,1)",
        fill: false,
        data: [65, 59, 80, 81, 56, 55, 40]
    },
    {
        label: "My Second dataset",
        backgroundColor: "rgba(151,187,205,0.2)",
        borderColor: "rgba(151,187,205,1)",
        fill: false,
        data: [28, 48, 40, 19, 86, 27, 90]
    }
  ]
}
options = {
  title: {
    display: true,
    text: "FacturaciÃ³n"
  },
  responsive: true,
  tooltips: {
    mode: 'index',
    intersect: true,
  },
  hover: {
    mode: 'nearest',
    intersect: true
  },
  scales: {
    xAxes: [{
      display: true,
      scaleLabel: {
        display: true,
        labelString: 'Month'
      }
    }],
    yAxes: [{
      display: true,
      scaleLabel: {
        display: true,
        labelString: 'Value'
      }
    }]
  }
}
%>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Bar Chart
        </div>
        <div class="panel-body">
          <div class="canvas-wrapper">
            <%= line_chart data, options %>
            <!-- <canvas class="main-chart" id="bar-chart"></canvas> -->
          </div>
        </div>
      </div>
    </div>
  </div><!--/.row-->  

</div>
